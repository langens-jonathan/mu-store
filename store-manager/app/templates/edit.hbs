{{md-input value=model.title label='Title' class="col s12" validate=true}}
{{md-textarea label='description' value=model.description class="col s12"}}
{{md-textarea label='documentation' value=model.documentation class="col s12"}}
{{md-input value=model.dockerName label='Docker Name' class="col s12" validate=true}}
{{md-input value=model.imageLocation label='Image Location' class="col s12" validate=true}}
{{md-input value=model.configureCommand label='Configure Command' class="col s12"}}

<br>
{{#md-table content=model.configFiles as |row|}}
  {{#md-table-col row=row key='name' header='File Name'}}
    {{row.name}}
  {{/md-table-col}}
  {{#md-table-col row=row key='location' header='Location'}}
    {{row.location}}
  {{/md-table-col}}
  {{#md-table-col row=row key='type' header='File Type'}}
    {{row.type}}
  {{/md-table-col}}
  {{#md-table-col}}
    {{#md-btn action='deleteConfigFile'
        actionArg=row
	buttonType='flat'
	class='red accent-2 white-text'}}
	delete
    {{/md-btn}}
  {{/md-table-col}}
{{/md-table}}

{{#if creating}}
<br><p>new config file:</p>
{{md-input value=cfName label='Name' class="col s12" validate=true}}
{{md-input value=cfLocation label='Location' class="col s12" validate=true}}
{{md-input value=cfType label='Type' class="col s12"}}
{{#md-btn action='cancelAddConfigFile'
	buttonType='flat'
	class='blue accent-2 white-text'}}
	Cancel Config File
{{/md-btn}}
{{#md-btn action='addConfigFile'
	buttonType='flat'
	actionArg=model
	class='blue accent-2 white-text'}}
	Add Config File
{{/md-btn}}
{{else}}
{{#md-btn action='startAddConfigFile'
	buttonType='flat'
	class='blue accent-2 white-text'}}
	Add Config File
{{/md-btn}}
{{/if}}
<br><br>


<br>
